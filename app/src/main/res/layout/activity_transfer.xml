<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Receipient Account no."
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="60dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/transferTo"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/transferTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="91dp"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/transferAmount"
        android:layout_toEndOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="169dp"
        android:layout_above="@+id/transferAmount"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <EditText
        android:id="@+id/transferAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="220dp"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/button8"
        android:layout_alignEnd="@+id/button8" />

    <Button
        android:id="@+id/transferbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="294dp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignStart="@+id/transferAmount"
        android:layout_marginBottom="14dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="365dp"
        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/transferTo"
        android:layout_marginEnd="13dp" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/transferbtn"
        android:layout_marginBottom="26dp"
        android:text="Home" />

</RelativeLayout>


