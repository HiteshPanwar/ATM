<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select type of account"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="76dp"
            android:layout_below="@+id/textView18"
            android:layout_alignEnd="@+id/checkBox6"
            android:layout_marginTop="31dp" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current"
            tools:layout_editor_absoluteX="216dp"
            tools:layout_editor_absoluteY="123dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/checkBox3"
            android:layout_alignStart="@+id/receiptbtn" />

        <Button
            android:id="@+id/receiptbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print receipt"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="204dp"
            android:layout_alignBottom="@+id/updatePassbookbtn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="79dp" />

        <Button
            android:id="@+id/updatePassbookbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Passbook"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="273dp"
            android:layout_marginBottom="62dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/checkBox3" />

</RelativeLayout>


