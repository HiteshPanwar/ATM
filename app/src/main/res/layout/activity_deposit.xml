<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="33dp"
        android:layout_below="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox2"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/depositamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="88dp"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit via:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="204dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="263dp"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@+id/checkBox2"
        android:layout_marginTop="26dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheque"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="307dp"
        android:layout_marginEnd="61dp"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/depositbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="373dp"
        android:layout_below="@+id/depositamount"
        android:layout_alignStart="@+id/textView15"
        android:layout_marginStart="41dp"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/homebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_toEndOf="@+id/depositamount"
        android:text="Home"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_alignStart="@+id/depositbtn" />
</RelativeLayout>




